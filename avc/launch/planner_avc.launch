<launch>
    <node name="planner_avc" pkg="rr_common" type="planner" output="screen" >
        <param name="N_PATH_SEGMENTS" value="2"/>
        <param name="N_CONTROL_SAMPLES" value="250"/>
        <param name="SEGMENT_DISTANCES" value="3 5"/>
        <param name="STEER_LIMITS" value="0.4 0.4"/>
        <param name="STEER_STDDEVS" value="0.2 0.2"/>
        <param name="INPUT_CLOUD_TOPIC" value="/map"/>
        <param name="MAX_SPEED" value="1.5"/>
        <param name="PATH_SIMILARITY_CUTOFF" value="0.10"/>
        <param name="MAX_RELATIVE_COST" value="2.0"/>
    </node>
</launch>
